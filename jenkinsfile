pipeline {
    agent any

    environment {
        ANSIBLE_HOST_KEY_CHECKING = 'False'
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/vishruthreddy/Solaris_RHEL.git'
            }
        }

        stage('Verify SSH Connection') {
            steps {
                sh '''
                echo "Verifying SSH connection to RHEL servers"
                for server in $(awk '/ansible_host/ {print $2}' inventory.ini | cut -d= -f2); do
                  ssh -o StrictHostKeyChecking=no -i /home/matilda-svc/.ssh/id_rsa matilda-svc@$172.24.7.140 "echo Connection successful to $server"
                done
                '''
            }
        }

        stage('Run Ansible Playbook') {
            steps {
                sh '''
                ansible-playbook -i inventory.ini serviceaccount.yml
                '''
            }
        }
    }
}
